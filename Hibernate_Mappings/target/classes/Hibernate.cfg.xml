<?xml version="1.0" encoding="UTF-8"?><!-- 
	Version 8 MySQL hiberante-cfg.xml example for Hibernate 5 -->
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property><!-- property name="connection.driver_class">com.mysql.jdbc.Driver</property -->
		<property name="connection.url">jdbc:mysql://localhost:3306/hybernate</property>
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hbm2ddl.auto">create</property><!-- mapping class="com.mcnz.jpa.examples.Player" 
			/ -->
		<mapping class="com.product.entity.Hibernate_Mappings.Answer" />
		<mapping class="com.product.entity.Hibernate_Mappings.Question" />
		<mapping class="com.product.entity.Hibernate_Mappings.Answer1" />
		<mapping class="com.product.entity.Hibernate_Mappings.Question1" />
		<mapping class="com.product.entity1.Hibernate_Mappings.QuestionM" />
		<mapping class="com.product.entity1.Hibernate_Mappings.AnswerM" />

	</session-factory>
</hibernate-configuration>